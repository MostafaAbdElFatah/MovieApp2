<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333232"
    android:padding="10dp"
    tools:context="com.mostafa.fci.movieapp.Activitys.MovieDetailsActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="match_parent"
        tools:layout_editor_absoluteX="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">


            <TextView
                android:id="@+id/movie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Movie Name"
                android:textColor="#fff"
                android:textSize="40dp" />

            <WebView
                android:id="@+id/trailer"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="240dp" >

            </WebView>

            <TextView
                android:id="@+id/tagline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tagline"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="year"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="year"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/director"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="year"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/cast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Cast:"
                android:textColor="#fff"
                android:textSize="20dp" />
            <RatingBar
                android:id="@+id/rating"
                android:rating="3"
                android:progressTint="@android:color/holo_red_dark"
                android:progressBackgroundTint="@android:color/background_light"
                android:secondaryProgressTint="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/story"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Story"
                android:textColor="#fff" />

        </LinearLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:backgroundTint="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_favorite_border_red_24dp"
        android:layout_margin="20dp"
        android:onClick="favoritebtnClicked"/>
</RelativeLayout>
